<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <gradient android:angle="-90" android:endColor="#ff4b87be" android:startColor="#ff4b87be" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <solid android:color="#ff4174a1" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <gradient android:angle="-90" android:endColor="#ff4174a1" android:startColor="#ff4174a1" />
        </shape>
    </item>
</selector>

